<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3F2F0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_edit_time"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/border"/>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:outlineAmbientShadowColor="@color/green_light"
            android:background="@drawable/border"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp">

        </TimePicker>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            // Problem

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:id="@+id/problem_card"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:gravity="center_vertical|left"
                >
                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Problem">


                </TextView>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >


                    <com.travijuu.numberpicker.library.NumberPicker
                        android:id="@+id/problem_number"
                        android:layout_width="130dp"
                        android:layout_height="40dp"

                        />


                </LinearLayout>


            </LinearLayout>

            // Daily

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="2dp"
                android:id="@+id/alarm_tes"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:gravity="center_vertical|left"
                >
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="#000"
                    android:text="Daily">


                </TextView>

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dayChooser_tag"
                        android:textSize="18dp"
                        android:text="None"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/alarm_preferences"
            android:orientation="vertical"
            >

        </LinearLayout>
        <Button
            android:id="@+id/toggle_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alarm_save"
            android:layout_marginHorizontal="50dp"
            android:onClick="toggleOnCLick">

        </Button>

    </LinearLayout>

</ScrollView>